<%- include('header'); -%>

<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div id="imagesCarousel" class="carousel slide" data-ride="carousel">
			  <ol class="carousel-indicators">
			  	<% for(i=0; i < images.length; i++){%>
			    	<li data-target="#imagesCarousel" data-slide-to="<%- i %>"></li>
			    <%};%>
			  </ol>
			  <div class="carousel-inner">
			  	<% images.forEach(function(image){%>
			  		<div class="carousel-item">
				      <img src="<%- image %>" class="d-block">
				    </div>
				<%});%>
			  </div>
			  <a class="carousel-control-prev" href="#imagesCarousel" role="button" data-slide="prev">
			    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
			    <span class="sr-only">Previous</span>
			  </a>
			  <a class="carousel-control-next" href="#imagesCarousel" role="button" data-slide="next">
			    <span class="carousel-control-next-icon" aria-hidden="true"></span>
			    <span class="sr-only">Next</span>
			  </a>
			</div>
		</div>
	</div>

	<br>
	<div class="row">
		<div class="col-lg-3">
			<div class="card">
			  <div class="card-body">
			    <h5 class="card-title"><%= content.name %></h5>
			    <h6 class="card-subtitle mb-2 text-muted"><%= content.link %></h6>
			    <br>
			    <p class="card-text"><b>Price:</b> <%= content.current_price %></p>
			    <p class="card-text"><b>Latest Price:</b> <%= content.updated_price %></p>
			  </div>
			</div>
		</div>
		<div class="col-lg-9">
			<div class="card">
			  <div class="card-body">
			    <h5 class="card-title"><b>Description:</b> </h5>
			    <p class="card-text"><%- content.description %></p>
			  </div>
			</div>
		</div>
	</div>
</div>

<%- include('footer'); -%>